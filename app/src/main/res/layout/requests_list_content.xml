<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".activities.requests.RequestsListActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/text_margin">
        <TextView
            android:id="@+id/request_put_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            tools:text="danilo@gmail.com"/>
        <TextView
            android:id="@+id/data_de_envio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            style="@style/Base.TextAppearance.AppCompat.Small"
            tools:text="Paciente"/>
        <TextView
            android:id="@+id/message_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="10dp"
            tools:text="1212oiu343iu434jhj12jn12jn3k4j3"/>
    </LinearLayout>


    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true">
        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/downloadButtom"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:iiv_color="@color/blue_grey_500"
            app:iiv_icon="gmd-cloud-download"
            android:padding="5dp"
            android:layout_margin="5dp"/>
        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/forwardButtom"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:iiv_color="@color/blue_grey_500"
            app:iiv_icon="gmd-forward"
            android:padding="5dp"
            android:layout_margin="5dp"/>
        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/resultButtom"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:iiv_color="@color/blue_grey_500"
            app:iiv_icon="gmd-mail-reply"
            android:padding="5dp"
            android:layout_margin="5dp"/>

    </LinearLayout>
</RelativeLayout>